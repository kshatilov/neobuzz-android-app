<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ScoreActivity">
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0"
        tools:layout_editor_absoluteY="0">

        <LinearLayout
            android:id="@+id/logo_container"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/score_display">
        </TextView>

        <TextView
            android:id="@+id/score_display"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="#5bb3bf"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="@string/bottom_text">
        </TextView>

        <Button
            android:id="@+id/again"
            android:text="@string/again"
            android:layout_marginTop="55dp"
            android:layout_height="50dp"
            android:textColor="#d7595d"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>